<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.dorado.labexer2_dorado.viewPage">

    <Button
        android:id="@+id/btn_loadShared"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="loadPref"
        android:text="LOAD Shared Prefereces" />

    <Button
        android:id="@+id/btn_loadInternal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_loadShared"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="loadInternal"
        android:text="LOAD INTERNAL STORAGE" />

    <TextView
        android:id="@+id/tv_credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_loadInternal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_credentials"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:onClick="clear"
        android:text="Clear" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_clear"
        android:layout_alignBottom="@+id/btn_clear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:onClick="backPage"
        android:text="back" />

</RelativeLayout>
